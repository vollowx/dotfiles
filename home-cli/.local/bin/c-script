#!/usr/bin/env sh

set -e

mkdir -p "$XDG_CACHE_HOME/dotfiles/c-scripts"

src="$(readlink -f "$1")"
shift

sum=$(sha1sum "$src" | grep -Eo '^\w+')
bin="$XDG_CACHE_HOME/dotfiles/c-scripts/$sum"

test -f "$bin" &&
  exec "$bin" "$@"

{
  dir="$(mktemp -d)"
  cd "$dir" || exit 1

  cp "$src" "$dir/m.c"

  args=$(eval "echo -e \"$(sed -n '2s/^...//p' $dir/m.c)\"")
  gcc -o "$bin" "$dir/m.c" $args

  rm -r "$dir"
} 1>&2

exec "$bin" "$@"
